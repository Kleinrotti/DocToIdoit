{
  "Idoit": {
    "Server": "", //url to your i-doit server api
    "ApiKey": "" //i-doit api key
  },
  "IronOcr.LicenseKey": "",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "DocToIdoit": "Debug"
    },
    "File": {
      "Path": "service_{0:dd}-{0:MM}-{0:yyyy}.log",
      "Append": "True",
      "MinLevel": "Information",
      "FileSizeLimitBytes": 1000000, // 1MB per file
      "MaxRollingFiles": 0
    }
  },
  "Ocr": {
    "Scale": 300, //target DPI scaling, higher scaling could improve the ocr accuracy but needs more RAM and CPU
    "Deskew": true,
    "CustomLanguageFile": "", //Full path to your custom tesseract language file
    "License": "", //IronOCR license key
    "DeliveryNoteDetectionRegex": "(LIEF).\\d*", //this would filter everything beginning with LIEF and following numbers e.g. LIEF20210234
    "TicketIdDetectionRegex": "(?<=Ticket# )[^.\\s]*", //regex to detect a ticket id
    "DateDetectionRegex": "(3[01]|[12][0-9]|0?[1-9])\\.(1[012]|0?[1-9])\\.((?:19|20)\\d{2})", //this would filter a date with the format 29.12.2021 (dd.MM.YYYY)
    "SerialDelimiter": ",",
    "SerialIndicators": [ //indicator to detect the lines where the serial numbers are listed
      "S/N:",
      "Serials:"
    ],
    "SupportedProducts": [ //add your products here
      {
        "ProductName": "BL2205", //this string needs to be contained in the document to find the product (identification)
        "Type": "C__OBJTYPE__MONITOR", //idoit object type (can be found in the idoit settings)
        "IdoitPrefix": "MON-TEMP-", //this is the prefix which will be used to create the idoit object
        "Template": 588 //Idoit object template id
      },
      {
        "ProductName": "BenQ BL2381T",
        "Type": "C__OBJTYPE__MONITOR",
        "IdoitPrefix": "MON-TEMP-",
        "Template": 587
      }
    ]
  },
  "Smtp": {
    "MailOnError": false,
    "Server": "",
    "Port": 25,
    "Subject": "",
    "From": "",
    "To": ""
  },
  "Watcher": {
    "ScanPath": "/ocr/scan/", //directory where to listen for new files
    "ProcessingPath": "/ocr/processing/",
    "ErrorScanPath": "/ocr/errors/", //directory where files with missmatched ocr will be moved to
    "OcrResultPath": "/ocr/results/",
    "ProcessAsync": false, //when multiple new files were found these can be processed in parallel to speed up the process, but the logfile will be harder to analyse. Ensure you have enough CPU power to benefit.
    "ScanInterval": 30000 //interval to check for new files (milliseconds)
  }
}